
# Правила для assign
assign [app_id="^steam$"] workspace 4
assign [app_id=".*Telegram.*"] workspace 3
assign [app_id=".*telegram.*"] workspace 3
assign [app_id="(?i).*dota2.*"] workspace 14
assign [class="(?i).*dota2.*"] workspace 14
assign [class="(?i).*steam_app.*"] workspace 13
assign [app_id="^Alacritty$" title="^Alacritty$"] workspace 21
assign [app_id="^vivaldi-stable$"] workspace 12
assign [app_id="floorp"] workspace 12


# Правила для for_window (действия)
for_window [app_id="^steam$"] fullscreen enable
for_window [app_id=".*Telegram.*"] focus
for_window [app_id=".*telegram.*"] focus
for_window [title="Просмотр медиа"] floating enable 
for_window [app_id="(?i).*dota2.*"] fullscreen enable
for_window [class="(?i).*dota2.*"] fullscreen enable, focus
for_window [class="(?i).*steam_app.*"] fullscreen enable 
for_window [app_id="^Alacritty$" title="^Alacritty$"] focus
for_window [app_id="^vivaldi-stable$"] focus
for_window [app_id="floorp"] focus

# Generic rules
for_window [title="^(Media viewer|Просмотр медиа|Picture-in-Picture)$"] floating enable
for_window [title="^Picture-in-Picture$"] sticky enable
for_window [title="^Firefox — Sharing Indicator$"] move to workspace scratchpad
for_window [title="^(.*is sharing (your screen|a window)\.)$"] move to workspace scratchpad
#
# Idle inhibit rules
for_window [app_id="^mpv$" title=".*"] inhibit_idle fullscreen
for_window [app_id="^firefox$" title=".*YouTube.*"] inhibit_idle fullscreen
for_window [app_id="^firefox$"] inhibit_idle fullscreen
#
# Floating rules
for_window [title="^(file_progress|confirm|dialog|download|notification|error|splash|confirmreset|Open File|branchdialog|Lxappearance|Rofi|viewnior|feh|pavucontrol-qt|pavucontrol|file-roller|wlogout|Media viewer|Volume Control|Picture-in-Picture)$"] floating enable
for_window [app_id="^Rofi$"] floating enable; animation off
