
### Some setting
hide_edge_borders smart_no_gaps
smart_borders on
gaps inner 10
smart_gaps  on
focus_follows_mouse no
xwayland enable
default_border none

#Keyboard layout
input * {
    xkb_layout "us,ru"
    xkb_options "grp:caps_toggle"
    accel_profile "flat"
    pointer_accel  0
}




# Status Bar:
bar {
    position bottom
    swaybar_command waybar
}

# Определение мониторов
set $LMonitor DP-2
set $CMonitor DP-1
set $RMonitor DP-3
set $TV HDMI-A-1

# Мониторы
output $LMonitor mode 1920x1080@144Hz pos 640 0 adaptive_sync on
output $CMonitor mode 2560x1440@144Hz pos 0 1080 adaptive_sync on
output $RMonitor mode 3840x2160 pos 2560 600 transform 270 scale 2 adaptive_sync on



# Воркспейсы
workspace 1 output $LMonitor
workspace 2 output $LMonitor
workspace 3 output $LMonitor
workspace 4 output $LMonitor
workspace 5 output $LMonitor

workspace 11 output $CMonitor
workspace 12 output $CMonitor
workspace 13 output $CMonitor
workspace 14 output $CMonitor
workspace 15 output $CMonitor

workspace 21 output $RMonitor
workspace 22 output $RMonitor
workspace 23 output $RMonitor
workspace 24 output $RMonitor
workspace 25 output $RMonitor

include windows
include bindings
include autostart

exec gsettings set $gnome-schema gtk-theme 'Yaru-dark'
exec gsettings set $gnome-schema icon-theme 'Yaru-dark' 
exec gsettings set $gnome-schema cursor-theme 'Yaru-dark'
exec gsettings set $gnome-schema font-name 'Yaru-dark'
exec hypridle
exec_always --no-startup-id "swaybg -i ~/nixos-flakes-pc/home-manager/common/dotfiles/default/night.jpg"
